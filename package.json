{
  "name": "plain-language-icons",
  "publisher": "local",
  "displayName": "Plain Language Theme + Syntax",
  "description": "Candy color theme and syntax highlighting for Plain language (.pln) files",
  "version": "0.1.0",
  "scripts": {
    "build:vsix": "npx vsce package"
  },
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Themes",
    "Programming Languages"
  ],
  "contributes": {
    "iconThemes": [
      {
        "id": "plain-language-icons",
        "label": "Plain Language Icons",
        "path": "./icons/plain-icon-theme.json"
      },
      {
        "id": "seti-plain-language",
        "label": "Seti (VS Code) + Plain",
        "path": "./icons/seti-plain-icon-theme.json"
      }
    ],
    "languages": [
      {
        "id": "plain",
        "aliases": ["Plain", "plain"],
        "extensions": [".pln"],
        "configuration": "./plain-language-configuration.json",
        "icon": {
          "light": "./icons/images/plain-file.svg",
          "dark": "./icons/images/plain-file.svg"
        }
      }
    ],
    "grammars": [
      {
        "language": "plain",
        "scopeName": "source.plain",
        "path": "./syntaxes/plain.tmLanguage.json"
      }
    ],
    "themes": [
      {
        "label": "Plain Language Candy",
        "uiTheme": "vs-dark",
        "path": "./themes/plain-color-theme.json"
      }
    ]
  }
}
