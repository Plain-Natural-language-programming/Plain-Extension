{
  "name": "Plain Language Candy",
  "type": "dark",
  "colors": {
    "editor.background": "#0a0d1a",
    "editor.foreground": "#e5e7eb",
    "editor.selectionBackground": "#1f2a44",
    "editor.lineHighlightBackground": "#111827",
    "editorCursor.foreground": "#f472b6",
    "editorIndentGuide.background": "#1f2937",
    "editorIndentGuide.activeBackground": "#334155"
  },
  "tokenColors": [
    {
      "scope": ["comment", "comment.line.number-sign.plain", "comment.line.double-slash.plain"],
      "settings": { "foreground": "#94a3b8", "fontStyle": "italic" }
    },
    {
      "scope": ["string", "string.quoted.double.plain", "string.quoted.single.plain"],
      "settings": { "foreground": "#f472b6" }
    },
    {
      "scope": ["constant.numeric", "constant.numeric.plain"],
      "settings": { "foreground": "#60a5fa" }
    },
    {
      "scope": ["constant.language", "constant.language.plain"],
      "settings": { "foreground": "#fbbf24" }
    },
    {
      "scope": ["keyword", "keyword.control", "keyword.control.plain"],
      "settings": { "foreground": "#facc15", "fontStyle": "bold" }
    },
    {
      "scope": ["keyword.operator", "keyword.operator.plain"],
      "settings": { "foreground": "#fb923c" }
    },
    {
      "scope": ["support.function", "support.function.plain"],
      "settings": { "foreground": "#a78bfa" }
    },
    {
      "scope": ["entity.name.type", "entity.name.type.class", "entity.name.type.class.plain"],
      "settings": { "foreground": "#34d399" }
    }
  ]
}
