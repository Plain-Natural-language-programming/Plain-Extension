{
  "name": "Plain Language",
  "scopeName": "source.plain",
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#keywords" },
    { "include": "#builtins" },
    { "include": "#booleans" },
    { "include": "#operators" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.number-sign.plain",
          "match": "#.*$"
        },
        {
          "name": "comment.line.double-slash.plain",
          "match": "//.*$"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.plain",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            { "name": "constant.character.escape.plain", "match": "\\\\." }
          ]
        },
        {
          "name": "string.quoted.single.plain",
          "begin": "'",
          "end": "'",
          "patterns": [
            { "name": "constant.character.escape.plain", "match": "\\\\." }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.plain",
          "match": "\\b\\d+(?:\\.\\d+)?\\b"
        }
      ]
    },
    "booleans": {
      "patterns": [
        {
          "name": "constant.language.plain",
          "match": "\\b(?:true|false|none|null)\\b"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.plain",
          "match": "\\b(?:if|elif|else|for|each|in|while|repeat|until|do|then|otherwise|return|yield|try|catch|except|finally|raise|throw|with|as|and|or|not|async|await|class|function|generator|create|make|define|call|run|execute)\\b"
        }
      ]
    },
    "builtins": {
      "patterns": [
        {
          "name": "support.function.plain",
          "match": "\\b(?:print|say|show|display|echo|log|len|range|sum|min|max|sorted|map|filter|open|type|enumerate|zip|any|all)\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.plain",
          "match": "==|!=|<=|>=|\\+=|-=|\\*=|/=|%=|\\*\\*|[+\\-*/%]=?|[<>]=?"
        }
      ]
    }
  }
}
